<script>
document.getElementById("send").addEventListener("click", () => {
  const name = document.getElementById("name").value.trim();
  const email = document.getElementById("email").value.trim();
  const app = document.getElementById("app").value;

  const subject = encodeURIComponent(`Private Beta Request — ${app}`);
  const body = encodeURIComponent(
`Hi Orion GLE,

Please add me to the private beta list.

Name: ${name || "-"}
Email: ${email || "-"}

Interested in: ${app}

Thanks,`
  );

  window.location.href = `mailto:support@oriongle.co.uk?subject=${subject}&body=${body}`;
});
</script>
